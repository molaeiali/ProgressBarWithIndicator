<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ProgressBarWithIndicator">
        <attr name="android:max" format="integer" />
        <attr name="android:progress" format="integer" />
        <attr name="progressBarHeight" format="integer" />
        <attr name="progressBorderWidth" format="integer" />
        <attr name="borderColor" format="color" />
        <attr name="indicatorColor" format="color" />
        <attr name="progressColor" format="color" />
        <attr name="progressBackground" format="color" />
        <attr name="android:background" format="color" />
        <attr name="indicatorBar" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="none" value="2" />
            <enum name="both" value="3" />
        </attr>
    </declare-styleable>
</resources>